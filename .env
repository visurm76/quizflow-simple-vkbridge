# Порт сервера
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/quizflow
# Или используйте MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quizflow

# JWT Secret (для будущей аутентификации)
JWT_SECRET=your_super_secret_jwt_key_change_this

# Настройки загрузки файлов
MAX_FILE_SIZE=52428800 # 50MB в байтах
UPLOAD_PATH=./uploads

# Режим
NODE_ENV=development